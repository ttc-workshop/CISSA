@using Intersoft.CISSA.UserApp.Utils;
<html>
<head>
    <title>@ViewBag.Title</title>

    @Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.office2007.css"))

    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" type="text/css" media="screen" />
